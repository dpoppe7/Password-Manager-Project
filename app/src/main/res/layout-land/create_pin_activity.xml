<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@+id/coordinator_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">


        <TextView
            android:id="@+id/explanation_text_view"
            android:layout_width="405dp"
            android:layout_height="58dp"
            android:text="@string/create_new_pin_text"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/create_pin_text_view"
            android:layout_width="250dp"
            android:layout_height="44dp"
            android:text="@string/create_pin"
            android:textSize="36sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/explanation_text_view"/>

        <TextView
            android:id="@+id/pin_length_text_view"
            android:layout_width="250dp"
            android:layout_height="32dp"
            android:text="@string/pin_length_req"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/create_pin_text_view"
            app:layout_constraintTop_toBottomOf="@+id/create_pin_text_view" />


        <TextView
            android:id="@+id/confirm_text_view"
            android:layout_width="250dp"
            android:layout_height="44dp"
            android:layout_marginLeft="100dp"
            android:text="@string/confirm_pin"
            android:textSize="36sp"
            app:layout_constraintStart_toEndOf="@+id/create_pin_text_view"
            app:layout_constraintTop_toBottomOf="@id/explanation_text_view" />

        <EditText
            android:id="@+id/pin_confirmation_edit_text"
            android:layout_width="250dp"
            android:layout_height="72dp"
            android:gravity="center_horizontal"
            android:inputType="numberPassword"
            android:letterSpacing="0.25"
            android:maxLength="5"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/create_pin_edit_text"
            app:layout_constraintStart_toStartOf="@+id/confirm_text_view"
            app:layout_constraintTop_toTopOf="@+id/create_pin_edit_text"
            android:importantForAutofill="no" />


        <Button
            android:id="@+id/create_pin_button"
            android:layout_width="362dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/create_pin_button"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toStartOf="@+id/pin_confirmation_edit_text"
            app:layout_constraintHorizontal_bias="0.461"
            app:layout_constraintStart_toEndOf="@+id/create_pin_edit_text"
            app:layout_constraintTop_toBottomOf="@+id/create_pin_edit_text" />

        <EditText
            android:id="@+id/create_pin_edit_text"
            android:layout_width="250dp"
            android:layout_height="72dp"
            android:layout_marginTop="18dp"
            android:gravity="center_horizontal"
            android:hint="@string/PIN_example"
            android:inputType="numberPassword"
            android:letterSpacing="0.25"
            android:maxLength="5"
            android:textSize="36sp"
            app:layout_constraintStart_toStartOf="@+id/create_pin_text_view"
            app:layout_constraintTop_toBottomOf="@+id/pin_length_text_view" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>