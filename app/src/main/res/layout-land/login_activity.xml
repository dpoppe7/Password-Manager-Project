<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@+id/coordinator_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".LoginActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_anchor="@+id/constraintLayout"
        app:layout_anchorGravity="center">

        <TextView
            android:id="@+id/welcome_text_view"
            android:layout_width="232dp"
            android:layout_height="49dp"
            android:gravity="center"
            android:text="@string/welcome"
            android:textSize="36sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/lock_img"
            android:layout_width="232dp"
            android:layout_height="235dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/lock_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/welcome_text_view"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/enter_pin_text_view"
            android:layout_width="270dp"
            android:layout_height="65dp"
            android:layout_marginTop="50dp"
            android:text="@string/enter_your_pin"
            android:textSize="36sp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@id/lock_img"
            app:layout_constraintStart_toEndOf="@+id/welcome_text_view"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/enterLogin"
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:inputType="numberPassword"
            android:letterSpacing="0.25"
            android:maxLength="5"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@id/lock_img"
            app:layout_constraintStart_toEndOf="@+id/welcome_text_view"
            app:layout_constraintTop_toBottomOf="@+id/enter_pin_text_view" />

        <Button
            android:id="@+id/login_button"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:text="@string/open"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@id/lock_img"
            app:layout_constraintStart_toEndOf="@+id/welcome_text_view"
            app:layout_constraintTop_toBottomOf="@id/enterLogin" />

        <TextView
            android:id="@+id/create_pin_textview"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="@string/don_t_have_a_pin"
            android:textSize="18sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/enter_pin_text_view"
            app:layout_constraintLeft_toLeftOf="@id/enter_pin_text_view"
            app:layout_constraintTop_toBottomOf="@id/login_button" />

        <Button
            android:id="@+id/create_pin_button"
            style="@style/Button"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="@string/create_pin_button"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/enter_pin_text_view"
            app:layout_constraintStart_toStartOf="@+id/enter_pin_text_view"
            app:layout_constraintTop_toBottomOf="@+id/create_pin_textview" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>